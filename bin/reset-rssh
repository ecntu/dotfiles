#!/bin/bash

# I save rented ssh configs and known_hosts in a separate folder for convienience.
set -euo pipefail

target="$HOME/.ssh/rented"

if [ -d "$target" ]; then
    rm -rf -- "$target"
fi

mkdir -p "$target"
chmod 700 "$target"
touch "$target/config" "$target/known_hosts"
chmod 600 "$target"/*

echo "Reset rented SSH config and known_hosts in $target/"